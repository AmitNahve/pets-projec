@model WebApplicationPetsShop.Models.Animal
@{
    ViewBag.Title = "AddAnimal";
}
 <script src="~/lib/jquery/dist/Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
<script src="~/lib/jquery-validtion/dist/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/lib/jquery-validtion-unobtrustive/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>

<form method="post" asp-action="AddNewAnimal" asp-controller="Admin">

    <h5 class="modal-title">Add Animal Form</h5>

    <div class="modal-body">
        <div class="form-group">
            <label>Name:</label>
             <span asp-validation-for="Name"></span>
            <input type="text" asp-for="Name" class="form-control" />
            <label>Age:</label>
             <span asp-validation-for="Age"></span>
            <input type="number" asp-for="Age" class="form-control" />
            <label>PictureSrc:</label>
             <span asp-validation-for="PictureSrc"></span>
            <input type="text" asp-for="PictureSrc" class="form-control" />
            <label>Description:</label>
             <span asp-validation-for="Description"></span>
            <input type="text" asp-for="Description" class="form-control" />
        </div>
        <div class="form-group">
            <label>Category:</label>
            <select asp-for="Category" class="form-control">
                <option value="">All categories</option>
                <option value="1">Birds</option>
                <option value="2">Invertebrates</option>
                <option value="3">Fish</option>
                <option value="4">Mammals</option>
                <option value="5">Reptiles</option>
                <option value="6">Amphibians</option>
            </select>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Add Animal</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
    </div>

    @if (Model != null)
    {
        <script type="text/javascript">
            $(function() {
                alert("Inserted Animal ID: " + @Model.AnimalId);
            });
        </script>
    }
</form>

